<!----------------------------------- CONTACT------------------------------------------>
<section id="contact" class="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>Nous contacter</h3>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">La Petite Bretonnière

                            85540 LE CHAMP ST PERE</div>
                        <div class="col-md-6">HORAIRES DE VOTRE GARAGISTE
                            AMS MANU<br>
                            Du Lundi au vendredi<br>
                            de 9h à 12h et de 14h à 18h
                            Le Samedi matin de 9h à 12h
                            sur rendez-vous
                        </div>
                    </div>
                </div>
                <!----------------------------------- MAP------------------------------------------>

                <div class="col-md-6">
                    <div class="map">
                        <iframe title="map"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2746.619931307065!2d-1.319489048980704!3d46.49583777193195!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48041fa4bd352c45%3A0x8bc2a8057dbfb9d!2sGarage+ams+manu!5e0!3m2!1sfr!2sfr!4v1552332817462"
                            width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>

        <!----------------------------------- FORMULAIRE------------------------------------------>

        <form action="/send-contact" method="POST" enctype="multipart/form-data">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="contact-form">
                            <label>Nom:</label>
                            <input type="text" id="nom" name="name"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-form">
                            <label>Prénom:</label>
                            <input type="text" id="prénom" name="surname"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="contact-form">
                            <label>Adresse:</label>
                            <input type="text" id="adresse" class="contact-message" name="address" style="width:70%;">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="contact-form">
                            <label>CP:</label>
                            <input type="text" id="cp" name="postalCode"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-form">
                            <label>Ville:</label>
                            <input type="text" id="ville" name="city"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="contact-form">
                            <label>Téléphone</label>
                            <input type="tel" id="telephone" name="phone"/>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="contact-form">
                            <label>Email:</label>
                            <input type="email" id="email" name="email" placeholder="ajoutez votre email" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="contact-form">
                            <label>Message:</label>
                            <textarea id="message" rows="3" class="contact-message" name="message" style="width:100%;"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <input type="file" name="image" id="image" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="contact-form">
                            <button class="btn btn-contact" type="submit">Envoyer</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>